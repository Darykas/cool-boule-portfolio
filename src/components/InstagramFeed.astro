<section class="instagram-feed-section">
  <div class="instagram-feed-container">
    <h2 class="instagram-title">Latest from Instagram</h2>
    <p class="instagram-subtitle">@boule_cool</p>
    <div class="instagram-feed">
      <!-- Instagram Embed - Using Instagram's oEmbed -->
      <div class="instagram-post">
        <iframe 
          src="https://www.instagram.com/boule_cool/?utm_source=ig_embed" 
          width="100%" 
          height="400" 
          frameborder="0" 
          scrolling="no"
          allowfullscreen=""
          allow="clipboard-write; encrypted-media; picture-in-picture"
        ></iframe>
      </div>
    </div>
    <div class="instagram-cta">
      <a href="https://www.instagram.com/boule_cool/" target="_blank" rel="noopener noreferrer" class="instagram-link">
        Follow on Instagram â†’
      </a>
    </div>
  </div>
</section>

<style>
  .instagram-feed-section {
    width: 100%;
    padding: 4rem 0;
    background: #fafdff;
  }

  .instagram-feed-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .instagram-title {
    font-size: 2.2rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 0.5rem;
    color: #333;
  }

  .instagram-subtitle {
    text-align: center;
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 2rem;
  }

  .instagram-feed {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .instagram-post {
    width: 100%;
    max-width: 600px;
  }

  .instagram-cta {
    text-align: center;
    margin-top: 2rem;
  }

  .instagram-link {
    display: inline-block;
    padding: 0.9rem 2.2rem;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 2rem;
    background: linear-gradient(90deg, #ffe9b2 0%, #76cfc5 100%);
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .instagram-link:hover {
    background: linear-gradient(90deg, #76cfc5 0%, #ffe9b2 100%);
    transform: scale(1.05);
    box-shadow: 0 4px 16px rgba(94, 194, 182, 0.18);
  }

  @media (max-width: 768px) {
    .instagram-feed-section {
      padding: 2rem 0;
    }

    .instagram-title {
      font-size: 1.8rem;
      margin-bottom: 0.5rem;
    }

    .instagram-post {
      max-width: 100%;
    }
  }
</style>
